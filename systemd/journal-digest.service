[Unit]
Description=Evidence Journal Daily Digest Email
After=network.target postgresql.service

[Service]
Type=oneshot
User=YOUR_USER
WorkingDirectory=/path/to/journal
ExecStart=/usr/bin/node scripts/send-digest-email.js
StandardOutput=journal
StandardError=journal
SyslogIdentifier=journal-digest

# Environment
Environment="NODE_ENV=production"
EnvironmentFile=-/path/to/journal/.env

[Install]
WantedBy=multi-user.target
