PUBLIC_URL=https://evidence.journal

# db
DATABASE_URL="postgresql://journal:xxx@localhost:5432/journal"

# redis (for caching Spotify genre data)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_USERNAME=
REDIS_CACHE_ENABLED=true

# ports
PORT=4001

# smtp (outgoing SMTP is now configured per-user in the Settings UI)
# Remove global SMTP_* variables and configure delivery under Settings > Email delivery

# github
GITHUB_TOKEN=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://127.0.0.1:5001/api/oauth/github/callback
GITHUB_SCOPES=read:user user:email repo
GITHUB_ACTIVITY_MODE=authenticated_events 
GITHUB_ACTIVITY_USERNAME=

# spotify oauth
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_CALLBACK_URL=http://127.0.0.1:5001/api/oauth/spotify/callback
SPOTIFY_SCOPES=user-read-email user-read-recently-played

# google auth
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_CALLBACK_URL=http://127.0.0.1:5001/api/oauth/google/callback

# default user (used when storing tokens without login)
DEFAULT_USER_EMAIL=demo@example.com

# session key (hex, 32 bytes / 64 hex chars) used by secure session; set this in production
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=

# email bookmarks (IMAP) - moved to per-account DB settings (managed in the Settings UI)
# Remove these from `.env` and configure per-user Email Bookmark settings instead.

# trello
TRELLO_API_KEY=
TRELLO_TOKEN=

# digest
DIGEST_RANGE_HOURS=24
# DIGEST_SINCE=2025-12-15T00:00:00Z