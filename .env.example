# db
DATABASE_URL="postgresql://journal:xxx@localhost:5432/journal"

# ports
PORT=4001

# smtp
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# github
GITHUB_TOKEN=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:3000/api/oauth/github/callback
GITHUB_SCOPES=read:user user:email
GITHUB_ACTIVITY_MODE=authenticated_events 
GITHUB_ACTIVITY_USERNAME=

# spotify oauth
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_CALLBACK_URL=http://127.0.0.1:5001/api/oauth/spotify/callback
SPOTIFY_SCOPES=user-read-email

# default user (used when storing tokens without login)
DEFAULT_USER_EMAIL=demo@example.com

# session key (hex, 32 bytes / 64 hex chars) used by secure session; set this in production
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=

# email bookmarks (IMAP)
EMAIL_BOOKMARK_IMAP_HOST=
EMAIL_BOOKMARK_IMAP_PORT=993
EMAIL_BOOKMARK_IMAP_SECURE=true
EMAIL_BOOKMARK_USERNAME=
EMAIL_BOOKMARK_PASSWORD=
EMAIL_BOOKMARK_MAILBOX=INBOX
EMAIL_BOOKMARK_PROCESSED_MAILBOX=INBOX/Processed

# digest
DIGEST_RANGE_HOURS=24
# DIGEST_SINCE=2025-12-15T00:00:00Z