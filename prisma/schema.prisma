datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  id         String     @id @default(cuid())
  source     String
  eventType  String
  occurredAt DateTime
  externalId String?
  payload    Json
  userId     String?
  user       User?      @relation(fields: [userId], references: [id])
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  dayEvents  DayEvent[]
  enrichments EventEnrichment[]

  @@index([source, occurredAt])
  @@index([userId, occurredAt])
  @@unique([source, externalId])
}

model EventEnrichment {
  id        String   @id @default(cuid())
  eventId   String
  source    String
  enrichmentType String @default("unknown")
  data      Json
  fetchedAt DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  event Event @relation(fields: [eventId], references: [id])

  @@unique([eventId, enrichmentType])
  @@index([source])
}

model Cursor {
  id        String   @id @default(cuid())
  source    String
  connectedAccountId String?
  cursor    String?
  updatedAt DateTime @updatedAt

  connectedAccount ConnectedAccount? @relation(fields: [connectedAccountId], references: [id])

  @@unique([source, connectedAccountId])
  @@index([source])
}

model Day {
  date         DateTime   @id
  mood         String?
  note         String?
  highlights   String?
  privacyLevel String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  dayEvents    DayEvent[]
}

model DayEvent {
  id       String   @id @default(cuid())
  dayDate  DateTime
  eventId  String
  day      Day      @relation(fields: [dayDate], references: [date])
  event    Event    @relation(fields: [eventId], references: [id])

  @@unique([dayDate, eventId])
}

model User {
  id                String             @id @default(cuid())
  email             String?            @unique
  displayName       String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  authIdentities    AuthIdentity[]
  connectedAccounts ConnectedAccount[]
  events            Event[]
  emailDelivery     UserEmailDelivery?
}

model AuthIdentity {
  id              String    @id @default(cuid())
  userId          String
  provider        String
  providerSubject String
  email           String?
  createdAt       DateTime  @default(now())
  lastLoginAt     DateTime?
  user            User      @relation(fields: [userId], references: [id])

  @@unique([provider, providerSubject])
  @@index([userId])
}

model ConnectedAccount {
  id                 String       @id @default(cuid())
  userId             String
  provider           String
  providerAccountId  String
  displayName        String?
  scopes             String?
  status             String       @default("active")
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt
  user               User         @relation(fields: [userId], references: [id])
  oauthTokens        OAuthToken[]
  cursors            Cursor[]
  emailBookmarkSettings EmailBookmarkSettings?
  googleTimelineSettings GoogleTimelineSettings?

  @@unique([userId, provider, providerAccountId])
  @@index([userId, provider])
}

model UserEmailDelivery {
  id          String   @id @default(cuid())
  userId      String   @unique

  provider    String   @default("smtp")
  fromEmail   String
  fromName    String?

  host        String
  port        Int
  secure      Boolean  @default(false)
  username    String
  password    String

  replyTo     String?
  digestSubject String  @default("Your Daily Digest")
  enabled     Boolean  @default(true)

  lastSentAt  DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model EmailBookmarkSettings {
  id                 String   @id @default(cuid())
  connectedAccountId String   @unique
  host               String
  port               Int
  secure             Boolean  @default(true)
  mailbox            String   @default("INBOX")
  processedMailbox   String   @default("INBOX/Processed")
  username           String
  password           String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  connectedAccount ConnectedAccount @relation(fields: [connectedAccountId], references: [id])
}

model GoogleTimelineSettings {
  id                 String   @id @default(cuid())
  connectedAccountId String   @unique
  driveFileId        String?
  driveFileName      String   @default("Timeline.json")
  enabled            Boolean  @default(true)
  lastSyncedAt       DateTime?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  connectedAccount ConnectedAccount @relation(fields: [connectedAccountId], references: [id])
}

model OAuthToken {
  id                  String            @id @default(cuid())
  connectedAccountId  String
  accessToken         String
  refreshToken        String?
  expiresAt           DateTime?
  tokenType           String?
  scope               String?
  idToken             String?
  tokenJson           Json?
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt
  connectedAccount    ConnectedAccount  @relation(fields: [connectedAccountId], references: [id])
}
